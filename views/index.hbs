    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <!-- Bootstrap Material Design -->
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.9/css/bootstrap-material-design.css">
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.9/css/ripples.css">
  </head>
  <body>
    <div class="container" style="margin-top:30px;">
      <h3>Walkr WID 입력기</h3>
      <div class="row">
        <div class="col-xs-6 well">
          <form id="form" action="/" method="post">
            <div class="form-group label-floating">
              <label for="wid" class="control-label">사용자 wid</label>
              <input type="text" class="form-control" name="wid" id="wid">
            </div>
            <div>

            </div>
            <div class="form-group label-floating">
              <label for="target-wids" class="control-label">다른 사용자들의 wid 목록</label>
              <textarea name="targetWids"  class="form-control"id="target-wids" cols="30" rows="30"></textarea>
            </div>
            <button>Go!!</button>
          </form>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.9/js/material.min.js"></script>
    <script type="text/javascript">
    (function($){
      $.material.init();
      $('#form').on('submit', function(e){
        if($('#wid').val() === ''){
          alert('wid를 입력해주세요.');
          e.preventDefault();
        }

        if($('#target-wids').val() === ''){
          alert('친구의 wid를 입력해주세요.');
          e.preventDefault();
        }
      });
    })(window.jQuery);
    </script>
